<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Internal Sensor"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Measure Pulse"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp" />




        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/circular_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:direction="clockwise"
            app:dotColor="?colorPrimary"
            app:dotWidth="16dp"
            app:drawDot="true"
            app:enableProgressAnimation="true"
            app:fillBackground="false"
            app:gradientEndColor="@color/black"
            app:gradientType="linear"
            app:progressBackgroundColor="@color/white"
            app:progressBackgroundStrokeWidth="8dp"
            app:progressCap="round"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="16dp"
            app:startAngle="270"
            app:textColor="@color/light_black"
            app:textSize="20sp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:onClick="back"
        android:src="@drawable/ic_baseline_arrow_back_24" />
</RelativeLayout>