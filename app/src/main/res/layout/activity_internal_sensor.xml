<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".internalsensors.InternalSensorActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Internal Sensor"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Scan Device"
            android:onClick="gotoScan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/button_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:onClick="gotoLocation"
            android:text="Get Location"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/button_pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Measure Pulse"
            android:onClick="gotoPulse"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="back"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />
</RelativeLayout>